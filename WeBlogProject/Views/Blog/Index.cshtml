@model IPagedList<BlogListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!--/banner-->
<div class="banner-inner">
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Home</a>
    </li>
    <li class="breadcrumb-item active">Blog3</li>
</ol>
<!--//banner-->
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogDetails/@item.BlogId">
                                <img src="~/Template/images/7.jpg" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.BlogDate.ToString("ddd-MMM-yyyy")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> 2000
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="#">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">@item.BlogContent</p>
                                <a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", "Blog", new { page }), new PagedListRenderOptions {
    PageClasses = new string[] { "page-link bg-success text-light border-none" },
    LiElementClasses = new string[] { "page-item" },
    DisplayLinkToLastPage = PagedListDisplayMode.Always,
    DisplayLinkToFirstPage = PagedListDisplayMode.Always,
    ContainerDivClasses = new string[] { "p-1 pt-3 ml-5" },
    ActiveLiElementClass = "text-danger"
})